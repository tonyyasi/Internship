<tr id = "<%="#{tweet.id}" %>">
  <td ><%= tweet.id %></td>
  <td><%= tweet.content %></td>
  <td><%= time_ago_in_words tweet.created_at %></td>
  <td><%= link_to "Destroy", tweet_path(tweet), method: :delete, remote: true %></td>
  <td><%= link_to "Show", tweet_path(tweet) %></td>
  <td><%= link_to "Edit", edit_tweet_path(tweet) %></td>
</tr>
