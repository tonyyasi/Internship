

<div id = "todo">
  <%if user_signed_in? %>
  <%=form_for @tweet, remote: true do |f| %>

  <%=f.text_area "content", placeholder: "What's new minion?" %>
  <br>
  <%=f.submit "Tweet it!", class: "tweet_button"%>


<%end%>

<%else%>
  <h2>You must be logged in to tweet</h2>
<%end%>

<table id="tweets-container" style = "margin:0 auto;">
 <tbody>
    <%= render @tweets %>
  </tbody>
</table>
</div>
